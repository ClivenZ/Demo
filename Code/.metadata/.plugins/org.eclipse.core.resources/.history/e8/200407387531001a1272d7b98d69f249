#include "include.h"

unsigned int i;
unsigned int x1,y1;
int a[128];

//写LCD数据参数，判断0或1位
void wr_data(unsigned int dat1){
    unsigned int status;
    do
    {
        //屏蔽status的2~15位
        status = *c_addr & 0x03;
    }while(status != 0x03);
    *d_addr = dat1;
}

//写LCD指令参数
void wr_com(unsigned int com){
    unsigned int status;
    do
    {
        status = *c_addr & 0x08;
    }while(status != 0x03);
    *c_addr = com;
}

//初始化LCD显示，设置显示方式为图形方式，开显示
extern void GUILCD_init(void){
    wr_data(0x00);//设置图形显示区域首地址
    wr_data(0x00);//文本图形显示首地址
    wr_com(0x42);

    wr_data(0x20);//图形显示区域宽度
    wr_data(0x00);//文本显示属性宽度
    wr_com(0x43);

    wr_com(0xa0);   //光标形状设置

    wr_com(0x81);   //显示方式设计，逻辑或集合

    wr_com(0x9b);   //显示开关设置，仅文本开显示
}

//清LCD屏，用自动方式，将LCD屏清为白屏
extern void GUILCD_clear(void){
    int page0;

    wr_data(0x00);
    wr_data(0x00);
    wr_com(0x24);

    wr_com(0xb0);

    for(page0 = 0x2000;page0 >= 0;page0--){
        wr_data1(0x00);
    }
    wr_com(0xb2);
}









//main
int main(void){

#if 1
// Copy InitFlash function code and Flash setup code to RAM
  MemCopy(&RamfuncsLoadStart, &RamfuncsLoadEnd, &RamfuncsRunStart);
// This function must reside in RAM
  InitFlash();
#endif


  return 0;
}
